
<h1 class="title">Login</h1>
<%= form_with model: @user, url: session_path do |form| %>
  <%= render partial: 'errors', locals: {form: form} %>

  <div class="my-5">
    <%= form.label :email %>
    <%= form.email_field :email, class: "text-field" %>
  </div>

  <div class="my-5">
    <%= form.label :password %>
    <%= form.password_field :password, class: "text-field" %>
  </div>

  <div class="flex">
    <div>
      <%= form.submit "Login", class: "btn-primary" %>
    </div>

    <%= link_to "Forgot your password", new_password_reset_path, class: "btn-secondary" %>
  </div>
<% end %>


