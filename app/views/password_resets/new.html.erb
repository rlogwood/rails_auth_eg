
<h1 class="title">Reset Your Password</h1>
<%= form_with model: @user, url: password_reset_path do |form| %>
  <%= render partial: 'errors', locals: {form: form} %>

  <div class="my-5">
    <%= form.label :email %>
    <%= form.email_field :email, class: "text-field" %>
  </div>

  <div class="flex">
    <div>
      <%= form.submit "Reset Password", class: "btn-primary" %>
    </div>
  </div>
<% end %>
